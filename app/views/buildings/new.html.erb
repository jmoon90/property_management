<h1>Add New Building</h1>
<% if @building.errors.any? %>
  <%= flash[:notice] %>
<% end %>

<%= simple_form_for @building do |f| %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state, collection:(us_states) %>
  <%= f.input :postal_code %>
  <%= f.input :description %>
  <%= f.input :owner_id %>

  <%= f.button :submit %>
<% end %>
